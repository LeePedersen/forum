<h1>Comment: <%= @comment.user_name %></h1>
<h2>Comment: <%= @comment.title %></h2>
<h3><%= @comment.body %></h3>

<p><%= link_to "Edit comment", edit_comment_comment_path(@comment, @comment) %></p>
<p><%= link_to "Delete comment", comment_comment_path(@comment, @comment),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to comment", comment_path(@comment) %></p>
